<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bind="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name="calendar"
			type="al.bruno.calendar.view.model.Calendar"/>

		<variable
			name="adapter"
			type="al.bruno.calendar.view.adapter.CustomListAdapter"/>
	</data>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:text="@{calendar.month}"
			style="@style/Base.TextAppearance.AppCompat.Month"/>
		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:text="@{calendar.year}"
			style="@style/Base.TextAppearance.AppCompat.Year"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/greyed_out"
			android:layout_marginBottom="2dp"
			android:layout_marginTop="2dp"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/monday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/tuesday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/wednesday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/thursday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/friday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				style="@style/Base.TextAppearance.AppCompat.Day"
				android:text="@string/saturday"/>
			<androidx.appcompat.widget.AppCompatTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/sunday"
				style="@style/Base.TextAppearance.AppCompat.Sunday"/>
		</LinearLayout>

		<!--bind:adapter="@{calendar.monthPagerAdapter}"
		bind:listener="@{calendar.onPageChangeListener}"-->

		<androidx.viewpager2.widget.ViewPager2
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			bind:adapter="@{calendar.adapter}"
            bind:listener="@{calendar.onPageChangeListener}"/>
	</LinearLayout>
</layout>