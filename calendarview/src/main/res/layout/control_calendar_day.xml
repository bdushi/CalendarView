<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<variable
			name="localDateTime"
			type="al.bruno.calendar.view.LocalDateTime"/>
		<variable
			name="dateClickListener"
			type="al.bruno.calendar.view.OnDateClickListener"/>
	</data>
	<androidx.appcompat.widget.AppCompatTextView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:gravity="center"
		android:text="@{localDateTime.date}"
		android:textColor="@{localDateTime.sunday ? @color/sunday : (localDateTime.currentMonth  ? @color/black : @color/greyed_out)}"
		android:background="@{localDateTime.today ? @color/today : @color/null_color}"
		android:onClickListener="@{(v) -> dateClickListener.setOnDateClickListener(v, localDateTime)}"
		android:textAlignment="center"/>
</layout>
